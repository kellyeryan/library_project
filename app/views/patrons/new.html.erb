<body>
<h1>Sign Up for a Library Account</h1>

<h3><%= form_with scope: :patron, url: patrons_path, local: true do |form| %>

  <% if @patron.errors.any? %>
    <div id="error_explanation">
         <h2>
          <%= pluralize(@patron.errors.count, "error") %> prohibited your account from being saved:
         </h2>
          <ul>
         <% @patron.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
         <% end %>
          </ul>
        </div>
  <% end %>

  <p>
    <%= form.label :First_Name %>
    <%= form.text_field :first_name%>
  </p>

  <p>
    <%= form.label :Last_Name %>
    <%= form.text_field :last_name%>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.label :password_confirmation, "Password Confirmation" %>
    <%= form.password_field :password_confirmation %>
  </p>

  <p>
    <%= form.submit :Signup %>
  </p>

<% end %></h3>
</body>
