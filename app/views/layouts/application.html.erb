<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application', media: 'all' %>

     <!-- Latest compiled and minified CSS -->
    <!-- Font Awesome -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
<!-- Google Fonts -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
<!-- Bootstrap core CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/sandstone/bootstrap.min.css" rel="stylesheet">
<!-- Material Design Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.14.0/css/mdb.min.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <% if !current_patron %>
          <a class="navbar-brand" href="<%= root_url %>"/>Login or Sign up Page</a>
        <% else %>
          <a class="navbar-brand" id="<%= session[:patron_id] %>" href="<%= patron_path(session[:patron_id]) %>"/>Patron Account</a>
          <a class="navbar-brand" href="<%= logout_url %>"/>Logout</a>
        <% end %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">

        </ul>
      </div><!--/.nav-collapse -->
    </nav>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
</body>
</html>
