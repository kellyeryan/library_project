<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application', media: 'all' %>

     <!-- Latest compiled and minified CSS -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>

  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <% if !current_patron %>
          <a class="navbar-brand" href="<%= root_url %>"/>Login or Sign up Page</a>
        <% else %>
          <a class="navbar-brand" id="<%= session[:patron_id] %>" href="<%= patron_path(session[:patron_id]) %>"/>Patron Account</a>
          <a class="navbar-brand" href="<%= logout_url %>"/>Logout</a>
        <% end %>
      </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">

          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
</body>
</html>
